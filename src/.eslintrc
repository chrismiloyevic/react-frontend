{
  "extends": ["@atomix/react", "plugin:prettier/recommended"],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": [
          "../node_modules",
          "./"
        ]
      }
    }
  },
  "rules": {
    "react/sort-comp": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "max-len": ["warn", 140],
    "import/newline-after-import": ["error", {
      "count": 1
    }],
    "quotes": "off"
  }
}
